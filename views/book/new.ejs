<h1>Add a Book</h1>

<% if (flash && flash.err) { %>
	<ul class="bg-warning">
		<% Object.keys(flash.err.invalidAttributes).forEach(function(key) { %>
			<li><%= key %>: <%- JSON.stringify(flash.err.invalidAttributes[key]) %></li>
		<% }) %>
	</ul>
<% } %>

<form action="/book/create" method="POST" class="form-add-book">
	<label for="title">Title:</label>
	<input type="title" name="title" />
	<label for="ISBN">ISBN:</label>
	<input type="ISBN" name="ISBN" />
	<input type="submit" value="Submit" />
	<input type="hidden" name="_csrf" value="<%= _csrf %>" />
</form>